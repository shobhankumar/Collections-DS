/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *getIntersectionNode(ListNode *headA, ListNode *headB) {
        unordered_set<ListNode *> listmap;

        while(headA) {
            listmap.insert(headA);
            headA = headA->next;
        }

        while(headB) {
            auto itr = listmap.find(headB);
            if (itr != listmap.end() && *itr == headB) {
                return headB;
            } else {
                listmap.insert(headB);
            }
            headB = headB->next;
        }


        return nullptr;

    }
};
